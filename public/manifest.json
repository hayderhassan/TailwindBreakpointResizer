{
    "manifest_version": 3,
    "name": "Tailwind Breakpoint Resizer",
    "version": "0.1.0",
    "description": "Resize viewport to Tailwind v4 breakpoints + show live overlay in the page.",
    "permissions": [
        "debugger",
        "storage"
    ],
    "host_permissions": [
        "<all_urls>"
    ],
    "devtools_page": "devtools.html",
    "content_scripts": [
        {
            "matches": [
                "<all_urls>"
            ],
            "js": [
                "content-script.js"
            ],
            "run_at": "document_idle"
        }
    ]
}
